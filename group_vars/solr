group_custom_iptables_rules:
  - -A INPUT -p tcp -m tcp -s 10.0.2.0/24 --dport 8983 -m state --state NEW,ESTABLISHED -j ACCEPT
  - -A OUTPUT -p tcp -m tcp -d 10.0.2.0/24 --sport 8983 -m state --state ESTABLISHED -j ACCEPT

instance_disks:
  - /dev/xvdf

instance_volume_groups:
  - vg_name: data
    pv: /dev/xvdf1

instance_volumes:
  - lv_name: solr
    vg_name: data
    fs_type: ext4
    mount_point: /var/solr
